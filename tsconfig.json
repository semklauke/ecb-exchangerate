{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "removeComments": true,
        "noImplicitAny": true,
        "declaration": true,
        "outDir": "./lib",
        "declarationDir": "./lib",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017", "es7", "es6", "dom", "es5"]
    },
    "include": ["src"],
    "exclude": [
        "node_modules", 
        "**/__tests__/*",
        "./.git/", 
        "./node_modules/", 
        "./node_modules/**",
    ]
}